{
  "tabWidth": 4,
  "printWidth": 100,
  "semi": false,
  "singleQuote": false,
  "pluginSearchDirs": [
    "."
  ],
  "plugins": [
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "html",
        "svelteBracketNewLine": false,
        "svelteAllowShorthand": false,
        "svelteSortOrder": "options-scripts-styles-markup",
        "plugins": [
          "prettier-plugin-svelte"
        ]
      }
    }
  ]
}
